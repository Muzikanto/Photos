<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:theme="@style/MainActivity"
              android:layout_height="match_parent" android:orientation="vertical">

    <TextView
            android:text="Фото"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView3" android:textAlignment="center"
            android:textSize="24sp" android:textStyle="bold"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/sinlge_image"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/single_width" android:textAlignment="center"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/single_height" android:textAlignment="center"/>
    <Button
            android:text="To Favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/single_btn_favorite"/>
</LinearLayout>